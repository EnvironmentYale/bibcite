<?php
/**
 * @file
 * Module hooks.
 */

use Drupal\Core\Render\Element;

/**
 * Implements hook_theme().
 */
function sc_pub_entity_theme($existing, $type, $theme, $path) {
  return [
    'bibliography' => array(
      'render element' => 'elements',
    ),
    'sc_pub_contributor' => array(
      'render element' => 'elements',
    ),
    'sc_pub_keyword' => array(
      'render element' => 'elements',
    ),
  ];
}

/**
 * Implements hook_preprocess_HOOK().
 */
function sc_pub_entity_preprocess_bibliography(array &$variables) {
  // Fetch Bibliography Entity Object.
  $bibliography = $variables['elements']['#bibliography'];

  $variables['table'] = [
    '#type' => 'table',
  ];

  // Helpful $content variable for templates.
  foreach (Element::children($variables['elements']) as $key) {
    if (count(Element::children($variables['elements'][$key])) > 0) {
      $title = $variables['elements'][$key]['#title'];
      unset($variables['elements'][$key]['#title']);
      $variables['table'][] = [
        'title' => [
          '#markup' => $title,
        ],
        'element' => $variables['elements'][$key],
      ];
    }
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function sc_pub_entity_preprocess_sc_pub_contributor(array &$variables) {
  // Fetch Contributor Entity Object.
  $sc_pub_contributor = $variables['elements']['#sc_pub_contributor'];

  // Helpful $content variable for templates.
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function sc_pub_entity_preprocess_sc_pub_keyword(array &$variables) {
  // Fetch Keyword Entity Object.
  $sc_pub_keyword = $variables['elements']['#sc_pub_keyword'];

  // Helpful $content variable for templates.
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}
